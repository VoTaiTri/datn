<% provide(:title, 'All Lecturers') %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      thong tin user
    </section>
    <section class="stats">
    </section>
    <section class="entry_form">
    </section>
  </aside>

  <div class="col-md-8">
    <h3>All Lecturers</h3>
    <%= will_paginate %>

    <ul class="departments">
      <% @lecturers.each do |lecturer| %>
        <% if(lecturer != current_lecturer) %>
          <%= render lecturer %>
        <% end %>
      <% end %>
    </ul>

    <%= will_paginate %>
    <%= link_to "Create new lecturer", new_admin_lecturer_path %> 
  </div>
</div>