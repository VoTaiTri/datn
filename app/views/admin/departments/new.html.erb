<% provide(:title, 'Tạo mới') %>
<h1>Tạo mới</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @department]) do |f| %>
      <%= render 'shared/department_error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "Tạo bộ môn mới", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>